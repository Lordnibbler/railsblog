<div class="bg-cover bg-no-repeat dark:bg-primary-40 xs:bg-[center_top_1000rem] lg:bg-top pb-0 lg:pb-16 xl:px-16 bg-work-bg-light dark:bg-work-bg-dark" id="work">
    <div class="bg-[#fff] dark:bg-primary-40 w-5/6 md:w-11/12 2xl:w-full mx-auto py-16 lg:py-20 xl:py-24">
        <h2 class="font-header font-semibold text-primary dark:text-primary-1000 text-4xl sm:text-5xl lg:text-6xl uppercase text-center">
            Work Experience</h2>
        <h3 class="font-header font-medium text-black dark:text-primary-400 text-xl sm:text-2xl lg:text-3xl pt-6 text-center">
            San Francisco Based Technology Companies</h3>

        <div class="w-full lg:w-2/3 mx-auto flex flex-col mt-12 relative">
            <span class="absolute inset-y-0 left-2/5 ml-10 w-0.5 bg-grey-40 hidden md:block"></span>

            <% # cruise %>
            <div class="flex flex-col md:flex-row text-center md:text-left mt-8">
                <div class="md:w-2/5">
                    <div class="flex justify-center md:justify-start">
                        <span class="flex-shrink-0">
                            <%= image_tag "logo-cruise.svg", class: "w-48 h-16 relative -top-6", alt: "company logo" %>
                        </span>
                        <div class="relative w-full ml-6 hidden md:block">
                            <span class="h-0.5 bg-grey-70 absolute inset-x-0 top-3 transform -translate-y-1/2"></span>
                        </div>
                    </div>
                </div>
                <div class="md:w-3/5">
                    <div class="flex md:pl-18 relative">
                        <span
                            class="border-2 border-grey-40 rounded-full w-4 h-4 absolute left-8 top-1 bg-white hidden md:block"></span>

                        <div class="mt-1 flex">
                            <i class='bx bxs-right-arrow text-primary dark:text-primary-500 hidden md:block'></i>
                            <div class="md:pl-8 md:-mt-1">
                                <span class="font-body font-bold text-grey-40 dark:text-primary-300 block">
                                    Mar 2023 - <%= Time.now.strftime("%b %Y") %></span>
                                <span class="font-header font-bold text-xl text-primary dark:text-primary-500 uppercase block pt-2">
                                    Software Engineer</span>
                                <div class="pt-2">
                                    <span class="font-body text-black dark:text-primary-1000 block">
                                        Software Engineer on the Dispatch team. Responsible for matching rides and deliveries with autonomous vehicles.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% # lyft %>
            <div class="flex flex-col md:flex-row text-center md:text-left mt-24 md:mt-8">
                <div class="md:w-2/5">
                    <div class="flex justify-center md:justify-start">
                        <span class="flex-shrink-0">
                            <%= image_tag "logo-lyft.svg", class: "w-48 h-16 relative -top-5", alt: "company logo" %>
                        </span>
                        <div class="relative w-full ml-6 hidden md:block">
                            <span class="h-0.5 bg-grey-70 absolute inset-x-0 top-3 transform -translate-y-1/2"></span>
                        </div>
                    </div>
                </div>
                <div class="md:w-3/5">
                    <div class="flex md:pl-18 relative">
                        <span
                            class="border-2 border-grey-40 rounded-full w-4 h-4 absolute left-8 top-1 bg-white hidden md:block"></span>

                        <div class="mt-1 flex">
                            <i class='bx bxs-right-arrow text-primary dark:text-primary-500 hidden md:block'></i>
                            <div class="md:pl-8 md:-mt-1">
                                <span class="font-body font-bold text-grey-40 dark:text-primary-300 block">
                                    Apr 2017 - Nov 2023</span>
                                <span class="font-header font-bold text-xl text-primary dark:text-primary-500 uppercase block pt-2">
                                    Software Engineer</span>
                                <div class="pt-2">
                                    <span class="font-body text-black dark:text-primary-1000 block">
                                        Built and maintained Simulated Rides and Acceptance Testing platforms, ensuring
                                        Lyft can be reliable and scale to the highest traffic days of the year.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% # teespring %>
            <div class="flex flex-col md:flex-row text-center md:text-left mt-24 md:mt-8">
                <div class="md:w-2/5">
                    <div class="flex justify-center md:justify-start">
                        <span class="flex-shrink-0">
                            <%= image_tag "logo-teespring.svg", class: "w-48 h-auto dark:brightness-200", alt: "company logo" %>
                        </span>
                        <div class="relative w-full ml-6 hidden md:block">
                            <span class="h-0.5 bg-grey-70 absolute inset-x-0 top-1/2 transform -translate-y-1/2"></span>
                        </div>
                    </div>
                </div>
                <div class="md:w-3/5">
                    <div class="flex md:pl-18 relative">
                        <span
                            class="border-2 border-grey-40 rounded-full w-4 h-4 absolute left-8 top-1 bg-white hidden md:block"></span>

                        <div class="mt-1 flex">
                            <i class='bx bxs-right-arrow text-primary dark:text-primary-500 hidden md:block'></i>
                            <div class="md:pl-8 md:-mt-1">
                                <span class="font-body font-bold text-grey-40 dark:text-primary-300 block">
                                    Sep 2015 - Mar 2017
                                </span>
                                <span
                                    class="font-header font-bold text-xl text-primary dark:text-primary-500 uppercase block pt-2">Engineering
                                    Manager</span>
                                <div class="pt-2">
                                    <span class="font-body text-black dark:text-primary-1000 block">
                                        Architect of Teespring Storefronts product, widely used by online influencers
                                        for
                                        mechandise sales on sites such as YouTube.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% # onelogin %>
            <div class="flex flex-col md:flex-row text-center md:text-left mt-24 md:mt-8">
                <div class="md:w-2/5">
                    <div class="flex justify-center md:justify-start">
                        <span class="flex-shrink-0">
                            <%= image_tag "logo-onelogin.svg", class: "w-48 h-auto relative -top-2 dark:invert", alt: "company logo" %>
                        </span>
                        <div class="relative w-full ml-6 hidden md:block">
                            <span class="h-0.5 bg-grey-70 absolute inset-x-0 top-3 transform -translate-y-1/2"></span>
                        </div>
                    </div>
                </div>
                <div class="md:w-3/5">
                    <div class="flex md:pl-18 relative">
                        <span
                            class="border-2 border-grey-40 rounded-full w-4 h-4 absolute left-8 top-1 bg-white hidden md:block"></span>

                        <div class="mt-1 flex">
                            <i class='bx bxs-right-arrow text-primary dark:text-primary-500 hidden md:block'></i>
                            <div class="md:pl-8 md:-mt-1">
                                <span class="font-body font-bold text-grey-40 dark:text-primary-300 block">May 2013 - Aug
                                    2015</span>
                                <span class="font-header font-bold text-xl text-primary dark:text-primary-500 uppercase block pt-2">
                                    Software Engineer</span>
                                <div class="pt-2">
                                    <span class="font-body text-black dark:text-primary-1000 block">
                                        Led development on the NAPPS infrastructure that powers OneLogin's Native Mobile
                                        Application Single Sign-on platform.
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex justify-center mt-8">
            <a href="https://www.linkedin.com/in/benradler/" target="_blank"
                class="bg-primary dark:bg-primary-80 hover:bg-primary-60 dark:hover:bg-primary-100 transition-colors font-header font-bold text-lg text-white px-8 py-3 flex justify-center mt-5 rounded items-center uppercase">
                Let's Connect
                <i class="bx bxl-linkedin-square text-3xl relative -right-2"></i>
            </a>
        </div>
    </div>
</div>