            <div class="flex flex-col md:flex-row text-center md:text-left mt-8">
                <div class="md:w-2/5">
                    <div class="flex justify-center md:justify-start">
                        <span class="flex-shrink-0">
                            <%= image_pack_tag "home/logo-teespring.svg", class: "w-48 h-auto", alt: "company logo" %>
                        </span>
                        <div class="relative w-full ml-3 hidden md:block">
                            <span
                                class="h-0.5 bg-grey-70 absolute inset-x-0 top-1/2 transform -translate-y-1/2"></span>
                        </div>
