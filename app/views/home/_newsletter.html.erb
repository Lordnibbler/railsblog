<div class="bg-center bg-cover bg-no-repeat relative py-16 lg:py-24 bg-primary"
    style="background-image: url(<%= image_pack_path("images/home/bg-cta.jpg") %>);">
    <div
        class="bg-center bg-cover bg-no-repeat absolute inset-0 z-20 bg-gradient-to-r from-hero-gradient-from dark:from-hero-gradient-dark-from to-cta-gradient-to">
    </div>
    <div class="container z-30 relative">
        <h3
            class="font-header text-white text-3xl sm:text-4xl lg:text-5xl uppercase leading-tight text-center tracking-wide">
            Keep <span class="font-bold">up-to-date</span> <br />
            with what I'm up to</h3>
        <%= form_for NewsletterSignup.new, url: newsletter_signups_path, html: { class: "flex flex-col sm:flex-row justify-center mt-6" } do |form| %>
            <%= form.text_field :email, placeholder: 'email', class: "w-full sm:w-2/5 lg:w-1/3 font-body text-black px-4 py-3 sm:py-4 rounded" %>
            <%= form.submit "Join the Club", class: "font-body font-bold px-8 py-3 sm:py-4 bg-yellow hover:bg-primary text-base md:text-lg text-primary hover:text-white uppercase rounded sm:ml-2 mt-2 sm:mt-0 transition-colors focus:ring focus:ring-yellow focus:border-transparent focus:outline-none cursor-pointer" %>
        <% end %>
    </div>
</div>
